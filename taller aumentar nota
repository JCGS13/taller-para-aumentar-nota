        "//programa para calcular el valor de entradas de un cine//\n",
        "\n",
        "declare float num_niños\n",
        "\n",
        "declare float num_adultos\n",
        "\n",
        "declare float hora\n",
        "\n",
        "declare float total\n",
        "\n",
        "display \"ingrese el numero de niños\"\n",
        "\n",
        "input num_niños\n",
        "\n",
        "display \"ingrese el numero de adultos\"\n",
